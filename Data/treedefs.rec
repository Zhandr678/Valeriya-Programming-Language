%dir ../Headers/TreeGen
%namespace mylang

%define expr ( expr_empty )

%option empty { expr_empty } =>

%option literal { expr_lit } =>
    value : int

%option var { expr_var } =>
    name : std::string

%option binop { expr_add, expr_sub, expr_mul, expr_div } =>
    left : expr, right : expr

%option ifexpr { expr_if } =>
    cond : expr, then_branch : expr, else_branch : expr
